@page
@model MushroomWebsite.Areas.Admin.Pages.Mushrooms.IndexModel
@{
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-dark">Spis grzybów</h2>
        </div>
        <div class="col">
            <a asp-page="create" class="btn btn-primary text-white;" style="background-color: #405018;">
                Dodaj nowy grzyb
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="100%">
        <thead>
            <tr>
                <th>
                    Nazwa
                </th>
                <th>
                    Czy truje:
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.Mushrooms)
             {
                <tr>
                    <td width="40%">@obj.Name</td>
                    <td width="20%">@obj.IsPoisonous</td>
                    <td>
                        <a asp-page="Details" asp-route-id="@obj.Id" class="btn btn-primary mx-2 text-white;" style="background-color: #405018;">
                            Zobacz
                        </a>
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 text-white;" style="background-color: #405018;">
                            Zmień dane
                        </a>
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2;">
                            Usuń
                        </a>
                    </td>
                </tr>
             }
        </tbody>
    </table>
</div>